<Application
    x:Class="AiSD2_4.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AiSD2_4">

    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="myBtnStyle">
                <Setter Property="Width" Value="250"></Setter>
                <Setter Property="Height" Value="76"></Setter>
                <Setter Property="BorderThickness" Value="3"></Setter>
                <Setter Property="BorderBrush" Value="DarkGray"></Setter>
            </Style>
            
            <Style TargetType="Button" x:Key="myBtnIco">
                <Setter Property="Width" Value="120"></Setter>
                <Setter Property="Height" Value="40"></Setter>
                <Setter Property="BorderThickness" Value="3"></Setter>
                <Setter Property="BorderBrush" Value="DarkGray"></Setter>
            </Style>
            
            <Style TargetType="Button" x:Key="restart">
                <Setter Property="Width" Value="160"></Setter>
                <Setter Property="Height" Value="50"></Setter>
                <Setter Property="BorderThickness" Value="3"></Setter>
                <Setter Property="BorderBrush" Value="DarkBlue"></Setter>
            </Style>

            <Style TargetType="Button" x:Key="myBtnData">
                <Setter Property="Width" Value="325"></Setter>
                <Setter Property="Height" Value="65"></Setter>
                <Setter Property="BorderThickness" Value="3"></Setter>
                <Setter Property="BorderBrush" Value="DarkGray"></Setter>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>

</Application>

