<Page
    x:Class="AiSD2_4.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AiSD2_4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Morshuuuu.png" Stretch="UniformToFill" ></ImageBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="14*">
            </RowDefinition>
            <RowDefinition Height="5*">
            </RowDefinition>
            <RowDefinition Height="15*">
            </RowDefinition>
            <RowDefinition Height="18*">
            </RowDefinition>
            <RowDefinition Height="50*">
            </RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*">
            </ColumnDefinition>
            <ColumnDefinition Width="1*">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <MediaElement x:ConnectionId='2' x:Name="Longshuuuu" Visibility="Collapsed" Source="ms-appx:///Assets/Longhuuuu.mp4" AutoPlay="True" />

        <Button x:ConnectionId='3' Style="{StaticResource myBtnIco}"                               Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Background="DimGray">
            <TextBlock Text="Close" FontSize="16" Foreground="WhiteSmoke"></TextBlock>
        </Button>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left">
            <StackPanel.Background>
                <SolidColorBrush Color="DarkGray" Opacity="0.3"/>
            </StackPanel.Background>
            <Slider x:ConnectionId='12' x:Name="slideTxt" Value="{Binding SliderValue, Mode=TwoWay}" Width="780" Minimum="10" Maximum="50000" ></Slider>
        </StackPanel>

        <TextBlock x:ConnectionId='4' x:Name="txt" Grid.Row="2" Grid.Column="0" Text="Weight" FontSize="25" HorizontalAlignment="Center"                                        >
        </TextBlock>
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.Background>
                <SolidColorBrush Color="DarkGray" Opacity="0.3"/>
            </Grid.Background>
            
            <TextBlock x:ConnectionId='10' x:Name="txtSlider" Text="Weight" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="2.2"                                         Foreground="WhiteSmoke">
            </TextBlock>
            <TextBlock x:ConnectionId='11' x:Name="txtBox" Text="Please enter size of your Data" FontSize="25" HorizontalAlignment="Center" Margin="2.2" VerticalAlignment="Bottom"                                         Foreground="WhiteSmoke">
            </TextBlock>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBox x:ConnectionId='8' x:Name="MetalDataSize" Text="{Binding DataSourceSize, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" Width="200" Height="70" Foreground="White" HorizontalAlignment="Right" ></TextBox>
            <TextBox x:ConnectionId='9' x:Name="AlchemistryDataSize" Text="{Binding DataAlchemistrySize, Mode=TwoWay}" Grid.Row="0" Grid.Column="1"  Width="200" Height="70" Foreground="White" HorizontalAlignment="Left"></TextBox>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='5' x:Name="DataButton" Style="{StaticResource myBtnData}" Content="ChooseDataSourceFile" Grid.Row="0" Grid.Column="0" Foreground="WhiteSmoke"                                HorizontalAlignment="Center"></Button>
            <Button x:ConnectionId='6' x:Name="ResultButton" Style="{StaticResource myBtnData}" Content="ChooseDataAlchemistryFile" Grid.Row="1" Grid.Column="0" Foreground="WhiteSmoke"                                     HorizontalAlignment="Center"></Button>
            <Button x:ConnectionId='7' x:Name="RestartButton" Style="{StaticResource myBtnStyle}" Content="Make Money Button" Grid.Row="2" Grid.Column="0" Foreground="WhiteSmoke"                               HorizontalAlignment="Center"></Button>
        </Grid>
        


    </Grid>

</Page>

